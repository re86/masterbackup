    <hudson.tasks.Shell>
      <command>chmod 755 *.*

./updaterepo.sh /Users/hscbuild01/jenkins-slave/codebase/ENV/OPS/StoreEmpower-Android-code ${WORKSPACE} se.android.code.rel.${BUILD_NUMBER}.tar origin/release/TescoRelease ${pullhash}

